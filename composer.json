{
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "wikimedia/composer-merge-plugin": "^1.3",
        "php": "^5.6 || ^7.0",
        "zendframework/zend-component-installer": "^1.0 || ^0.2 || ^1.0.0-dev@dev",
        "zendframework/zend-mvc": "^3.0"
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "composer.local.json"
            ],
            "require": [
                "module/PaymentBase/composer.json",
                "module/AuthnetPayment/composer.json"
            ],
            "recurse": true,
            "replace": false,
            "merge-dev": true,
            "merge-extra": false
        }
    },
    "autoload": {
        "psr-4": {
            "Application\\": "module/Application/src/"
        }
    },
    "scripts": {
        "serve": "php -S 0.0.0.0:8080 -t public/ public/index.php"
    }
}